
<div class="flex-grow flex items-center justify-center">
    <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md">
      <h2 class="text-2xl font-bold text-center mb-6">会員登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "", data: { turbo: false } }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="mb-4">
          <%= f.label "名前：", class: "block mb-1 text-gray-700" %>
          <%= f.text_field :name, class: "w-full rounded-md border border-gray-300 py-2 px-3 focus:outline-none focus:ring-2 focus:ring-indigo-300" %>
        </div>

        <div class="mb-4">
          <%= f.label "メールアドレス：", class: "block mb-1 text-gray-700" %>
          <%= f.email_field :email, class: "w-full rounded-md border border-gray-300 py-2 px-3 focus:outline-none focus:ring-2 focus:ring-indigo-300" %>
        </div>

        <div class="mb-4">
          <%= f.label "パスワード：", class: "block mb-1 text-gray-700" %>
          <%= f.password_field :password, class: "w-full rounded-md border border-gray-300 py-2 px-3 focus:outline-none focus:ring-2 focus:ring-indigo-300" %>
        </div>

        <div class="mb-6">
          <%= f.label "パスワード（確認）：", class: "block mb-1 text-gray-700" %>
          <%= f.password_field :password_confirmation, class: "w-full rounded-md border border-gray-300 py-2 px-3 focus:outline-none focus:ring-2 focus:ring-indigo-300" %>
        </div>

        <%= f.submit '登録', class: "w-full bg-indigo-500 hover:bg-indigo-600 text-white py-2 rounded-md font-medium" %>
      <% end %>