<div class="w-full flex flex-col items-center">
  <div class="font-semibold text-2xl md:text-3xl mb-6 text-gray-800">
    アルバム作成
  </div>

  <div class="rounded-lg w-full max-w-xl p-8">
    <%= form_with model: @album, class: "space-y-6" do |form| %>

      <div class="mb-6 flex items-center">
        <%= form.label :title, 'タイトル：', class: "w-1/3 text-gray-700 text-lg md:text-xl pl-8" %>
        <%= form.text_field :title, class: "w-2/3 border border-gray-300 bg-gray-100 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-300" %>
      </div>

      <div class="mb-6 flex items-center">
        <%= form.label :description, '説明：', class: "w-1/3 text-gray-700 text-lg md:text-xl pl-8" %>
        <%= form.text_area :description, rows: 4, class: "w-2/3 border border-gray-300 bg-gray-100 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-300" %>
      </div>

      <div class="mt-6 flex justify-center">
        <%= form.submit '作成', class: "w-1/3 bg-button text-white mt-4 py-2 rounded-md font-semibold hover:bg-change text-md md:text-lg" %>
      </div>

    <% end %>
  </div>
</div>